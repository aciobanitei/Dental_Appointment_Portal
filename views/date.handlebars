<!-- Where the patient selects a date to make or change an appointment -->

<!-- navigation menu -->
<nav class="sitenav">
   <ul>
      <li>
         <input type = "button" value = "Exit" onclick="window.location.href = '/';" name = "submit" class="btn btn-warning btn-lg">
      </li>
      <li>
         <input type="button" onclick="window.location.href = '/home';" value="Home" name="submit" class="btn btn-info btn-lg">   
      </li>
      <li id="title">Make Appointment</li>
   </ul>
</nav>

<h2>To schedule an appointment, please complete and submit the request form below.</h2>

<!--- Learned from w3schools how to crate slideshows, display pictures-->
<!--create two column layout-->
<div class="row">
   <!--left column with slide shows-->
   <div class="column left">
      <div class="slideshow-container">

         <div class="mySlides">
            <div class="numbertext"></div>
            <img src="/images/cover1.png" alt="cover1" class="responsive">
         </div>

         <div class="mySlides">
            <div class="numbertext"></div>
            <img src="/images/cover4.png" class="responsive">
         </div>

         <div class="mySlides">
            <div class="numbertext"></div>
            <img src="/images/cover3.png" class="responsive">
         </div>
      </div>
   </div>


   <!-- a form where the patient enters their name and sends a post request to http://access.engr.oregonstate.edu:44467/date -->
   <div class="container">
      <!-- form for making an entry that will get added to the table -->
      <form id="theForm" method="post" action="/time">
         <div class="form-group">
            <p id="dateError" style="color:red"></p>
            <fieldset>
               <legend id="mainLegend">Date</legend>
               <div>
                  <label for="dateField">Select a Day:</label>
                  <input type="date" id="dateField" name="apptDate" required>
               </div>
            </fieldset>
            <input type="hidden" name="nextStep" value="{{nextStep}}">
            <input type="hidden" name="patientId" value="{{patientId}}">
            <input type="hidden" name="procedureId" value="{{procedureId}}">
            <input type="hidden" name="dentistId" value="{{dentistId}}">
            <input type="hidden" name="oldApptDate" value="{{oldApptDate}}">
            <input type="hidden" name="oldApptTime" value="{{oldApptTime}}">
            <br>
            <input type="submit" class="btn btn-warning" value="Submit">
         </div>
      </form>

      <h2 id="invalid">{{invalid}}</h2>
   </div>

   <!-- Used to give an error message if yesterday or today's date or a weekend is selected  -->
   <script src="../javascript/jScriptDateValidation.js"></script>
</div>   
