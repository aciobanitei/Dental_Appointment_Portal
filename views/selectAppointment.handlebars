<!-- Where a patient selects an existing appointment to change or delete -->

<!-- navigation menu -->
<nav class="sitenav">
   <ul>
      <li>
         <input type = "button" value = "Exit" onclick="window.location.href = '/';" name = "submit" class="btn btn-warning btn-lg">
      </li>
      <li>
            <input type="button" onclick="window.location.href = '/home';" value="Home" name="submit" class="btn btn-info btn-lg">   
      </li>
      <li id="title">Select Appointment</li>
   </ul>
</nav>

<h2>Please complete and submit the request form below.</h2>

<!--- Learned from w3schools how to crate slideshows, display pictures-->
<!--create two column layout-->
<div class="row">
   <!--left column with slide shows-->
   <div class="column left">
      <div class="slideshow-container">

         <div class="mySlides">
            <div class="numbertext"></div>
            <img src="/images/cover1.png" alt="cover1" class="responsive">
         </div>

         <div class="mySlides">
            <div class="numbertext"></div>
            <img src="/images/cover4.png" class="responsive">
         </div>

         <div class="mySlides">
            <div class="numbertext"></div>
            <img src="/images/cover3.png" class="responsive">
         </div>
      </div>
   </div>

   <!-- form for selecting an existing appointment from a drop down list -->

   <div class="container">
      <form id="theForm" method="post" action="/selected">
         <div class="form-group">
            <fieldset>
               <legend id="mainLegend">Select an Appointment</legend>
               <div>
                  <select id="selectApp" name="appointmentId">
                     {{#if appointments}}
                     {{#each appointments}}
                     <option value="{{this.appointmentId}}">{{this.appointment}}</option>
                     {{/each}}
                     {{/if}}
                  </select>
               </div>
            </fieldset>
            <input type="hidden" id="actionToTake" name="nextStep" value="{{nextStep}}">
            <input type="hidden" name="patientId" value="{{patientId}}">
            <br>
            <input type="submit" class="btn btn-warning" value="Select">
         </div>
      </form>
   </div>
</div>
